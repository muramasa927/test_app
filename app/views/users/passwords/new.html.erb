<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center"><%= t('.forgot_your_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class:"offset-md-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-8 offset-md-2"%>
        </div>

        <div class="actions text-center m-4">
          <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="offset-md-2">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
