<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center"><%= t('.change_my_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, t('.new_password'), class:"offset-md-2" %><br />
          <% if @minimum_password_length %>
            <em class="offset-md-2">(<%= @minimum_password_length %><%= t('.characters_minimum') %>)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('.confirm_new_password'), class:"offset-md-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="actions text-center m-4">
          <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="offset-md-2">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
