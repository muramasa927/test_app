<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center"><%= t('.sign_in') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"offset-md-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"offset-md-2" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"col-md-8 offset-md-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field offset-md-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center m-4">
          <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="offset-md-2">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
