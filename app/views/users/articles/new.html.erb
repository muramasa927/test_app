
<div class='row'>
	<div class='container'>
		<h2 class='text-center'>記事の新規作成</h2>
		<%= form_with model: [:users, @article] do |f| %>
			<%# render "users/shared/error_messages", resource: resource %>
			<div class="field">
				<%= f.label :title, class:"offset-md-2"%><br />
				<%= f.text_field :title, autofocus: true, autocomplete: "title", class:"col-md-8 offset-md-2" %>
			</div>

			<div class="field">
				<%= f.label :content, class:"offset-md-2" %><br />
				<%= f.email_field :content, autofocus: true, class:"col-md-8 offset-md-2" %>
			</div>

			<div class="actions text-center m-4">
				<%= f.submit '新規作成', class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>