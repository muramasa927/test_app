<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center"><%= current_user.name %><%= t('.title') %><%# resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class:"offset-md-2" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :email, class:"offset-md-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-8 offset-md-2" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class:"offset-md-2" %> <i><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></i><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"col-md-8 offset-md-2" %>
          <% if @minimum_password_length %>
            <br />
            <em class="offset-md-2"><%= @minimum_password_length %><%= t('.characters_minimum') %></em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:"offset-md-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class:"offset-md-2" %> <br><i class="offset-md-2"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="actions actions text-center m-4">
          <%= f.submit t('.update'), class:"btn btn-primary" %>
        </div>
      <% end %>

      <h3 class="text-center"><%= t('.cancel_my_account') %></h3>
      <div class="text-center">
        <p><%= t('.unhappy')%></p>
        <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class:"btn btn-danger" %>
      </div>
      <div class="offset-md-2">
        <%= link_to t('.back'), :back %>
      </div>
    </div>
  </div>
</div>
