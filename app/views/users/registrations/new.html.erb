<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center"><%= t('.sign_up') %></h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class:"offset-md-2"%><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :email, class:"offset-md-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"offset-md-2" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:"offset-md-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-8 offset-md-2" %>
        </div>

        <div class="actions text-center m-4">
          <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="offset-md-2">
        <%= render "users/shared/links" %>
      </div>
      
    </div>
  </div>
</div>
